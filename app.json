{
  "expo": {
    "name": "Guincho App",
    "slug": "guincho-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.guincho.app",
      "infoPlist": {
        "UIBackgroundModes": [
          "location",
          "fetch"
        ],
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Precisamos da sua localização em segundo plano para que o call center possa despachar o guincho mais próximo e acompanhar o trajeto.",
        "NSLocationWhenInUseUsageDescription": "Precisamos da sua localização para encontrar prestadores próximos.",
        "NSPhotoLibraryUsageDescription": "Precisamos de acesso à galeria para você escolher sua foto de perfil.",
        "NSCameraUsageDescription": "Precisamos de acesso à câmera para você tirar sua foto de perfil."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_BACKGROUND_LOCATION",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.FOREGROUND_SERVICE_LOCATION",
        "android.permission.RECORD_AUDIO"
      ],
      "package": "com.guincho.app",
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyBg6BOG9gi2y_4ldhw67e1aJlZjLCSQyPA"
        }
      }
    },
    "web": {
      "favicon": "./assets/images/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "91b63f60-f704-4025-963c-b52c14918b0d"
      },
      "agencyId": "00000000-0000-0000-0000-000000000000",
      "router": {}
    },
    "plugins": [
      [
        "expo-build-properties",
        {
          "android": {
            "usesCleartextTraffic": true
          }
        }
      ],
      "expo-router",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow $(PRODUCT_NAME) to use your location.",
          "isAndroidBackgroundLocationEnabled": true
        }
      ],
      "expo-secure-store",
      [
        "expo-notifications",
        {
          "color": "#137fec",
          "sounds": []
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Precisamos de acesso à galeria para você escolher sua foto de perfil.",
          "cameraPermission": "Precisamos de acesso à câmera para você tirar sua foto de perfil."
        }
      ],
      [
        "@stripe/stripe-react-native",
        {
          "merchantIdentifier": "merchant.com.guincho.app",
          "enableGooglePay": true
        }
      ]
    ],
    "scheme": "guincho-app"
  }
}